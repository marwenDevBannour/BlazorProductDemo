@page "/counter"
@inject INotificationService NotificationService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<P class="alert-info">@notificationMessage</p>
<p role="status">Current count: @currentCount</p>
<input type="number" @bind-value="@V1" class="form-control"/>
<br/>
<input type="number" @bind-value="@V2" class="form-control"/>
<br/>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-secondary" @onclick="DecrementCount">Decrement</button>

@code {
    private int currentCount = 0;
    private string notificationMessage = string.Empty;
    public int V1 { get; set; }
     public int V2 { get; set; }

    private void IncrementCount()
    {
        currentCount=V1;
        NotificationService.IncrementCounter(currentCount);
    }
    private void DecrementCount()
    {
        currentCount=V2;
        NotificationService.IncrementCounter(currentCount);
    }
    private void ResetCount()
    {
        currentCount = 0;
        notificationMessage = "Counter has been reset.";
    }
}
